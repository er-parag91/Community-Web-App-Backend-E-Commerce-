<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/auth.css">
</head>

<body>
  <%- include('../includes/navigation.ejs') %>

  <main>
    <form class="login-form" action="/signup" method="POST">
      <% if (errorMessage) { %>
      <p class="user-message user-message--error"><%= errorMessage %></p>
      <% } %>
      <div class="form-control">
        <label for="email">E-Mail</label>
        <input type="email" name="email" style="text-transform: lowercase;" id="email" value="<%= oldInput.email %>" required>
      </div>
      <div class="form-control">
        <label for="password">Password</label>
        <input type="password" name="password" id="password"  value="<%= oldInput.password %>" minlength="6" required>
      </div>
      <div class="form-control">
        <label for="confirmPassword">Confirm Password</label>
        <input type="password" name="confirmPassword" id="confirmPassword"  value="<%= oldInput.confirmPassword %>" minlength="6" required>
      </div>
      <!-- CSRF token input hidden -->
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <button class="btn" type="submit">Sign up</button>
    </form>
  </main>
  <%- include('../includes/end.ejs') %>